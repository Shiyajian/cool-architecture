<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.shiyajian</groupId>
  <artifactId>support-architecture</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>support-api</module>
    <module>support-client</module>
    <module>support-common</module>
    <module>support-facade</module>
    <module>support-infrastructure</module>
    <module>support-api/support-api-dubbo</module>
    <module>support-api/support-api-feign</module>
    <module>support-api/support-api-grpc</module>
    <module>support-client/support-client-dubbo</module>
    <module>support-client/support-client-feign</module>
    <module>support-client/support-client-grpc</module>
  </modules>
  <distributionManagement />
  <properties>
    <dependencies.version>1.0.0-SNAPSHOT</dependencies.version>
    <support-api-feign.version>1.0.0-SNAPSHOT</support-api-feign.version>
    <support-api-dubbo.version>1.0.0-SNAPSHOT</support-api-dubbo.version>
    <support-api.version>1.0.0-SNAPSHOT</support-api.version>
    <support-facade.version>1.0.0-SNAPSHOT</support-facade.version>
    <maven.compiler.source>17</maven.compiler.source>
    <support-infrastructure.version>1.0.0-SNAPSHOT</support-infrastructure.version>
    <components.version>1.0.0-SNAPSHOT</components.version>
    <revision>1.0.0-SNAPSHOT</revision>
    <maven.compiler.target>17</maven.compiler.target>
    <support-common.version>1.0.0-SNAPSHOT</support-common.version>
    <support-api-grpc.version>1.0.0-SNAPSHOT</support-api-grpc.version>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-dependencies</artifactId>
        <version>${dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-component</artifactId>
        <version>${dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-common</artifactId>
        <version>${support-common.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-facade</artifactId>
        <version>${support-facade.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-infrastructure</artifactId>
        <version>${support-infrastructure.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-api-dubbo</artifactId>
        <version>${support-api-dubbo.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-api-grpc</artifactId>
        <version>${support-api-grpc.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-api-feign</artifactId>
        <version>${support-api-feign.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-client-dubbo</artifactId>
        <version>${support-api-dubbo.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-client-grpc</artifactId>
        <version>${support-api-gprc.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.shiyajian</groupId>
        <artifactId>support-client-feign</artifactId>
        <version>${support-api-feign.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <version>1.1.0</version>
        <executions>
          <execution>
            <id>flatten</id>
            <phase>process-resources</phase>
            <goals>
              <goal>flatten</goal>
            </goals>
          </execution>
          <execution>
            <id>flatten.clean</id>
            <phase>clean</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <updatePomFile>true</updatePomFile>
          <flattenMode>resolveCiFriendliesOnly</flattenMode>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
